<p id="notice"><%= notice %></p>

<h1>
  <strong>
  <%= @beer_club.name %></strong>
</h1>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<!-- If beer club has members, show the following list: -->

<p>
  <% if @beer_club.users.exists? %>
  <strong>Members</strong>
    <table>
      <tbody>
      <ul>
        <% @beer_club.users.each do |user| %>
            <li>
              <%= user.username %>
            </li>
        <% end %>
      </ul>
      </tbody>

    </table>

  <% end %>
</p>


<%= link_to 'Edit', edit_beer_club_path(@beer_club) %> |
<td><%= link_to 'Destroy', @beer_club, method: :delete, data: { confirm: 'Are you sure?' }  if current_user && current_user.admin  %></td> |

  <%= link_to 'Back', beer_clubs_path %>
