<h1>List of ratings</h1>
<div class="row">
  <h3>
      <div class="col-md-4">Best Beers</div>
      <div class="col-md-4">Best Breweries</div>
      <div class="col-md-4">Best Styles</div>
  </h3>
</div>
<div class="row">
  <div class="col-md-4"><%= render 'list', collection: @top_beers %></div>
  <div class="col-md-4"><%= render 'list', collection: @top_breweries%></div>
  <div class="col-md-4"><%= render 'list', collection: @top_styles %></div>
</div>

<h3> Most Active Users</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>favorite beer</th>
      <th>preferred style</th>
      <th>favorite brewery</th>
      <th>ratings</th>
    </tr>
  </thead>

  <tbody>
    <% @top_users.each do |user| %>
        <tr>
          <td> <%= link_to user, user %> </td>
          <td> <%= user.favorite_beer.name %> </td>
          <td> <%=  user.favorite_style%> </td>
          <td> <%=  user.favorite_brewery %> </td>
          <td><%= user.ratings.count %> </td>
        </tr>
    <% end %>
  </tbody>
</table>

<hr>

<h3> Recent Ratings</h3>
<table class="table table-hover">
  <thead>
  <ul>
    <tr>
      <th>Beer</th>
      <th>Rating</th>
      <th>Rated by</th>
    </tr>

  </ul>
  </thead>

  <tbody>
    <ul>
      <% @ratings.recent.each do |rating| %>
          <tr>

            <td> <%= rating.beer.name %> </td> <td><%= rating.score %> </td><td> <%= link_to rating.user, rating.user %> </td>
          </tr>
      <% end %>
    </ul>
    </tbody>
</table>
